<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/basic_blue1" />
            <corners
                android:bottomRightRadius="@dimen/basic_d4"
                android:topRightRadius="@dimen/basic_d4" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="@dimen/basic_d1"
        android:right="@dimen/basic_d1"
        android:top="@dimen/basic_d1">
        <shape android:shape="rectangle">
            <solid android:color="@color/basic_black3" />
            <corners
                android:bottomRightRadius="@dimen/basic_d4"
                android:topRightRadius="@dimen/basic_d4" />
        </shape>
    </item>
</layer-list>