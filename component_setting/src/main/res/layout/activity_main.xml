<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.json.component_setting.FeedBackActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:background="#fff">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/top_back"
            android:layout_width="@dimen/basic_d20"
            android:layout_height="@dimen/basic_d20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/basic_d10"
            android:layout_marginStart="@dimen/basic_d10"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="问题描述"
            android:layout_centerInParent="true"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:text="问题描述"
        android:paddingLeft="@dimen/basic_d10"
        android:paddingTop="@dimen/dp_4"
        android:textSize="@dimen/sp_12"
        android:paddingBottom="@dimen/dp_4"
        android:layout_height="wrap_content"/>


    <EditText
        android:hint="请输入问题描述"
        android:minHeight="@dimen/basic_d200"
        android:gravity="top"
        android:inputType="text"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/basic_d10"
        android:layout_marginRight="@dimen/basic_d10"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_width="match_parent"
        android:background="@drawable/rect_bg"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/btn_login"
        android:gravity="center"
        android:layout_marginTop="@dimen/basic_d20"
        android:layout_marginLeft="@dimen/basic_d10"
        android:layout_marginRight="@dimen/basic_d10"
        android:layout_width="match_parent"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/white"
        android:layout_height="@dimen/basic_d40"
        android:text="提交"
        android:textSize="@dimen/basic_s18" />

</LinearLayout>
