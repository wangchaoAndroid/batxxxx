<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:id="@+id/app_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fenghuang.component_base.view.ViewPagerStop
        android:id="@+id/vp_view"
        android:layout_width="match_parent"
        android:layout_above="@+id/divide_line"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/divide_line"
        android:layout_above="@+id/bottom_navigation"
        android:background="@color/basic_gray0"
        android:layout_width="match_parent"
        android:layout_height=".5dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/app_dp_50"
        app:itemTextColor="@color/app_bottom_item_tv"
        android:theme="@style/Theme.AppCompat"
        app:menu="@menu/first_menu"/>

</RelativeLayout>
