<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_sp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_sp_sub"
        android:textSize="@dimen/sp_12"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/basic_d80"
        android:textColor="@color/basic_white1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_sp_sub"
        android:textSize="@dimen/basic_s20"
        android:textStyle="bold"
        android:textColor="@color/basic_white1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/skip_buy"
        android:textSize="@dimen/basic_s14"
        android:text="立即购买"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone"
        android:padding="@dimen/dp_4"
        android:background="@drawable/tv_bug_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:textColor="@color/basic_white1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>