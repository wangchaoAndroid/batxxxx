<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/component_user_dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/component_user_dp_50"
            android:drawableRight="@drawable/icon_user_1"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/component_user_dp_10"
            android:paddingTop="@dimen/component_user_dp_10"
            android:text="我的保险"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/component_user_dp_50"
            android:drawableRight="@drawable/icon_user_2"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/component_user_dp_10"
            android:paddingTop="@dimen/component_user_dp_10"
            android:text="我的副主"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/component_user_dp_50"
        android:drawableRight="@drawable/icon_user_3"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/component_user_dp_10"
        android:paddingTop="@dimen/component_user_dp_10"
        android:text="关于我们"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/component_user_dp_50"
            android:drawableRight="@drawable/icon_user_3"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/component_user_dp_10"
            android:paddingTop="@dimen/component_user_dp_10"
            android:text="在线保修"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>

        <TextView
            android:id="@+id/scan_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/component_user_dp_50"
            android:drawableRight="@drawable/icon_user_3"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/component_user_dp_10"
            android:paddingTop="@dimen/component_user_dp_10"
            android:text="电池扫码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>

        <TextView
            android:id="@+id/tv_nearbyShop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/component_user_dp_50"
            android:drawableRight="@drawable/icon_user_3"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/component_user_dp_10"
            android:paddingTop="@dimen/component_user_dp_10"
            android:text="附近门店"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/component_user_dp_50"
            android:drawableRight="@drawable/icon_user_4"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/component_user_dp_10"
            android:paddingTop="@dimen/component_user_dp_10"
            android:text="附近充电桩"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>
    </LinearLayout>



    <TextView
        android:id="@+id/btn_logout"
        android:gravity="center"
        android:layout_marginBottom="@dimen/component_user_dp_10"
        android:layout_marginLeft="@dimen/component_user_dp_10"
        android:layout_marginRight="@dimen/component_user_dp_10"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/white"
        android:layout_height="@dimen/basic_d40"
        android:text="退出登录"
        android:textSize="@dimen/basic_s18" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/component_user_dp_10"
        android:text="用户名最大字数限制"
        android:textSize="@dimen/basic_s16"
        app:layout_constraintBottom_toTopOf="@+id/ll1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"/>
</android.support.constraint.ConstraintLayout>