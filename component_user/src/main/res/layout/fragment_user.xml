<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_container"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/component_user_dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_user_dp_50"
                android:drawableRight="@drawable/icon_user_1"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/component_user_dp_10"
                android:paddingTop="@dimen/component_user_dp_10"
                android:text="我的保险"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divide_line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_user_dp_50"
                android:drawableRight="@drawable/icon_user_2"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/component_user_dp_10"
                android:paddingTop="@dimen/component_user_dp_10"
                android:text="我的副主"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divide_line"/>


            <TextView
                android:id="@+id/warn_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_user_dp_50"
                android:drawableRight="@drawable/icon_user_3"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/component_user_dp_10"
                android:paddingTop="@dimen/component_user_dp_10"
                android:text="告警信息"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divide_line"/>




            <TextView
                android:id="@+id/setting_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_user_dp_50"
                android:drawableRight="@drawable/icon_user_4"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/component_user_dp_10"
                android:paddingTop="@dimen/component_user_dp_10"
                android:text="设置"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divide_line"/>



        </LinearLayout>




    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/component_user_dp_10"
        android:textSize="@dimen/basic_s18"
        app:layout_constraintBottom_toTopOf="@+id/lll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"/>
</android.support.constraint.ConstraintLayout>