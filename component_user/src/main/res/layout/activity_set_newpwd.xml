<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:paddingLeft="@dimen/component_user_dp_10"
              android:paddingRight="@dimen/component_user_dp_10"
              android:fitsSystemWindows="true"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/basic_d10"
        android:paddingRight="@dimen/basic_d10"
        android:layout_height="?android:attr/actionBarSize">
        <ImageView
            android:id="@+id/back"
            android:layout_width="18dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_height="18dp"/>

        <TextView
            android:text="设置新密码"
            android:textSize="@dimen/basic_s16"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_phone"
        app:errorEnabled="false"
        android:padding="@dimen/component_user_dp_10"
        android:layout_width="match_parent"
        app:hintTextAppearance="@style/TextLabel"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_oldPwd"
            android:textSize="@dimen/basic_s14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入旧密码"/>

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_nick"
        android:padding="@dimen/component_user_dp_10"
        app:errorEnabled="false"
        app:hintTextAppearance="@style/TextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_newPwd"
            android:textSize="@dimen/basic_s14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"/>

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_re_password"
        android:padding="@dimen/component_user_dp_10"
        app:errorEnabled="false"
        app:hintTextAppearance="@style/TextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/basic_s14"
            android:hint="请再次输入新密码"/>

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/btn_sure"
        android:gravity="center"
        android:layout_marginTop="@dimen/component_user_dp_20"
        android:layout_marginLeft="@dimen/component_user_dp_10"
        android:layout_marginRight="@dimen/component_user_dp_10"
        android:layout_width="match_parent"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/white"
        android:layout_height="@dimen/basic_d40"
        android:text="@string/title_btn_login"
        android:textSize="@dimen/basic_s18" />

</LinearLayout>